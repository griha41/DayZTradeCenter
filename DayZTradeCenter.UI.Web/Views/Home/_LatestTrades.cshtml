@model IEnumerable<DayZTradeCenter.DomainModel.Trade>

@{
    const int pageSize = 4;
}

<!-- #region .container -->
<div class="container">
    <div class="row">
        @if (Model.Any())
        {
            <div class="jumbotron col-md-12" style="padding-bottom: 35px">
                <h2 class="title">Latest trades</h2>

                <!-- #region #Carousel -->
                <div id="Carousel" class="carousel slide">
                    <ol class="carousel-indicators">
                        @for (var i = 0; i <= Model.Count() / pageSize; i++)
                        {
                            <li data-target="#Carousel"
                                data-slide-to="@i"
                                @if (i == 0) { 
                                    @: class="active" 
                                }>
                            </li>
                        }
                    </ol>

                    <!-- #region .carousel-inner -->
                    <div class="carousel-inner">
                        @for (var i = 0; i <= Model.Count() / pageSize; i++)
                        {
                            <div class="item @if(i==0){<text>active</text>}">
                                <div class="row">
                                    @foreach (var trade in Model.Skip(i * pageSize).Take(pageSize))
                                    {
                                        <div class="col-md-3">
                                            <a href="#" class="thumbnail">
                                                <img src="http://placehold.it/250x250" alt="Image" style="max-width: 100%;">
                                                @trade.Id, H @trade.Have.First().Name, W @trade.Want.First().Name,
                                            </a>
                                        </div>
                                    }
                                </div><!--.row-->
                            </div><!--.item-->
                        }
                    </div>
                    <!-- #endregion -->

                    <a data-slide="prev" href="#Carousel" class="left carousel-control">‹</a>
                    <a data-slide="next" href="#Carousel" class="right carousel-control">›</a>
                </div>
                <!-- #endregion -->
            </div>
        }
        else
        {
            <div class="well">
                <h4>No trades available!</h4>
            </div>
        }
    </div>
</div>
<!-- #endregion -->
