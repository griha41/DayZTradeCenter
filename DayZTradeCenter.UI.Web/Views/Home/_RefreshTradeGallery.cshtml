<script>
    function worker() {
        $.ajax({
            url: '@Url.Action("GetGallery")',
            success: function(data) {
                $("#gallery").html(data);

                // starts again the carousel
                initCarousel();
            },
            complete: function() {
                // Schedule the next request when the current one's complete
                setTimeout(worker, 10 * 1000);
            }
        });
    }

    setTimeout(worker, 10 * 1000);
</script>
