@using Microsoft.AspNet.Identity

@model IEnumerable<DayZTradeCenter.UI.Web.Models.InboxViewModel>

@if (Model.Any())
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Inbox <span class="badge"> @Model.Count()</span>
        </a>
        <ul class="dropdown-menu">
            @foreach (var message in Model)
            {
                <li>
                    <div class="message">
                        <img src="~/Content/img/mail.png" alt="" />
                        <a href="@Url.Action("Inbox", "Profile")">@message.Subject</a>
                        <div>
                            <small>@message.Received</small>
                        </div>
                    </div>
                </li>
            }
            <li class="divider"></li>
            <li style="text-align: center">
                <a href="@Url.Action("Inbox", "Profile")" style="color: blue">See All</a>
            </li>
        </ul>
    </li>
}

<li>
    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Edit", "Profile", routeValues: null, htmlAttributes: new { title = "Profile" })
</li>
<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>