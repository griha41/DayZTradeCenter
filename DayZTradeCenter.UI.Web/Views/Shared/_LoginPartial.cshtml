@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            @if (Session["user_inbox"] != null && ((int) Session["user_inbox"]) > 0)
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Inbox <span class="badge">
                                                                                         @((int) Session["user_inbox"])
                                                                                     </span></a>
                    <ul class="dropdown-menu">
                        <li>
                            <div class="message">
                                <img src="http://placehold.it/25x25" alt="" />
                                <a href="#">New offer!</a>
                                <div>
                                    <small>1 min ago</small>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="message">
                                <img src="http://placehold.it/25x25" alt="" />
                                <a href="#">Won a trade!</a>
                                <div>
                                    <small>5 min ago</small>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="message">
                                <img src="http://placehold.it/25x25" alt="" />
                                <a href="#">Feedback received!</a>
                                <div>
                                    <small>yesterday</small>
                                </div>
                            </div>
                        </li>
                        <li class="divider"></li>
                        <li style="text-align: center">
                            <a href="@Url.Action("Inbox", "Profile")" style="color: blue">See All</a>
                        </li>
                    </ul>
                </li>
            }
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Edit", "Profile", routeValues: null, htmlAttributes: new {title = "Profile"})
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li><a href="javascript:document.getElementById('loginForm').submit()">Log in</a></li>
        </ul>
    }
}
