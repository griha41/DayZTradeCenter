@model PagedList.IPagedList<DayZTradeCenter.DomainModel.Entities.Item>

@{
    ViewBag.Title = "Index";
}

@section styles {
    @Styles.Render("~/Content/pagedlist")
    
    <style>
        .table-btn {
            width: 85px;
        }
    </style>
    
    @Styles.Render("~/Content/alertifyjs")
}

<h2>Items <small id="totalItemCount">@Model.TotalItemCount</small><small> items found</small></h2>

<div class="container" style="margin-bottom: 25px">
    <a class="btn btn-default" href="@Url.Action("Create")">Add</a>
</div>

<div id="items">
    @Html.Partial("_ItemsTable", Model)
</div>

@section scripts {
    @Scripts.Render("~/bundles/items_index")
}