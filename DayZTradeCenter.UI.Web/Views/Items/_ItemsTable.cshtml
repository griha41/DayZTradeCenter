@using PagedList.Mvc

@model PagedList.IPagedList<DayZTradeCenter.DomainModel.Entities.Item>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-default" href="@Url.Action("Details", new { id = item.Id})">Details</a>
                </td>
                <td>
                    <a class="btn btn-default" href="@Url.Action("Edit", new { id = item.Id})">Edit</a>
                </td>
                <td>
                    <a class="btn btn-default" href="@Url.Action("Delete", new { id = item.Id})">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }),
    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
        new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "items" }))