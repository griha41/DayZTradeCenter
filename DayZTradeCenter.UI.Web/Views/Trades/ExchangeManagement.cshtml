@model DayZTradeCenter.UI.Web.Models.ExchangeManagementViewModel

@{
    ViewBag.Title = "ExchangeManagement";
}

<h2>Exchange Management</h2>

<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("tradeId", Model.Trade.Id)
    
    <div class="form-horizontal">
        <h4>Exchange details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Details.SteamId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(
                    model => model.Details.SteamId,
                    new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Details.SteamId, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Details.Location, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(
                    model => model.Details.Location,
                    new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Details.Location, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Details.Server, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(
                    model => model.Details.Server,
                    new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Details.Server, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Details.Time, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(
                    model => model.Details.Time,
                    new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Details.Time, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-default">
                    <span class="glyphicon glyphicon-envelope"></span>
                </button>
            </div>
        </div>
    </div>
}

<hr />

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Messages</div>
    <div class="panel-body">
        <p>
            Here you can see all the messages related to the exchange for the trade with id = @Model.Trade.Id
        </p>
    </div>

    <!-- List group -->
    <ul class="list-group">
        @if (!Model.Messages.Any())
        {
            <li class="list-group-item"><i>No messages</i></li>
        }
        else
        {
            foreach (var message in Model.Messages)
            {
                <li class="list-group-item">@message.Text</li>
            }
        }
    </ul>
</div>

When the transaction is completed press 

@using (Html.BeginForm("TradeCompleted", "Trades", new { id = Model.Trade.Id }))
{
    @Html.AntiForgeryToken()

    <button class="btn btn-default">Completed</button>
}