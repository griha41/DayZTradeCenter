@model DayZTradeCenter.UI.Web.Models.ListTradesViewModel

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    <div class="container" style="margin-top: 10px">
        <div class="row">
            <div class="col-xs-1 col-xs-offset-3">
                <div class="input-group-btn search-panel">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span id="search_concept">Filter by</span> <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#have">Have</a></li>
                        <li><a href="#want">Want</a></li>
                        <li><a href="#both">Have/Want</a></li>
                    </ul>
                </div>
            </div>
            <input type="hidden" name="searchType" value="both" id="searchType">  
            <div class="col-xs-3" style="padding-right: 0">
                <select id="items" name="itemId">
                    @foreach (var item in Model.Items)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="col-xs-1">
                <button class="btn btn-default" type="submit" style="margin-left: -5px"><span class="glyphicon glyphicon-search"></span></button>
            </div>
            @if (Model.IsSearchApplied)
            {
                <div class="col-xs-2">
                    <button id="resetBtn" class="btn btn-default" type="submit" style="margin-left: -53px">Reset</button>
                </div>
            }
        </div>
    </div>
}

<h2>Trades <small>@Model.Trades.Count() trades found</small></h2>

@if (Model.CanCreate)
{
    <div class="container" style="margin-bottom: 25px">
        <div class="row">
            <div class="col-md-1">
                <a class="btn btn-default @if (!Model.CanCreateANewTrade)
                                          {
                                              <text>disabled</text>
                                          }"
                   href="@Url.Action("Create")">Add</a>

                @if (!Model.CanCreateANewTrade)
                {
                    @: You have reached your max quota of active trades
                }
            </div>
            <div class="col-md-6">
                @using (Html.BeginForm("GetHardcoreOnly", "Trades", FormMethod.Post, new {id = "filterTrades"}))
                {
                    <span>Show hardcore only</span>
                    <input id="showHardcoreOnly" type="checkbox" />
                }
            </div>
        </div>
    </div>
}

<div id="tradesTable">
    @Html.Partial("_TradesTable", Model.Trades)
</div>

@section scripts {
    <script src="~/Content/Selectize/js/standalone/selectize.js"></script>

    <script>
    $(function() {
        $('.search-panel .dropdown-menu').find('a').click(function(e) {
            e.preventDefault();
            var param = $(this).attr("href").replace("#", "");
            var concept = $(this).text();
            $('.search-panel span#search_concept').text(concept);
            $('#searchType').val(param);
        });

        $('#items').selectize({
            create: true,
            sortField: 'text'
        });

        // resets the search params before posting
        $('#resetBtn').click(function() {
            $('select[name=itemId]').val(null);
            $('#searchType').val(null);
        });

        $('#showHardcoreOnly').click(function() {
            var hardcoreOnly = $("#showHardcoreOnly").prop("checked");
            
            $("#tradesTable").load(
                '@(Url.Action("GetHardcoreOnly", "Trades"))?hardcoreOnly=' + hardcoreOnly);
        });
    });
    </script>
}
