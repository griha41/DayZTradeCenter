@using Microsoft.AspNet.Identity

@model DayZTradeCenter.UI.Web.Models.ListTradesViewModel

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    <div class="container" style="margin-top: 10px">
        <div class="row">
            <div class="col-xs-1 col-xs-offset-3">
                <div class="input-group-btn search-panel">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span id="search_concept">Filter by</span> <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#have">Have</a></li>
                        <li><a href="#want">Want</a></li>
                        <li><a href="#both">Have/Want</a></li>
                    </ul>
                </div>
            </div>
            <input type="hidden" name="searchType" value="both" id="searchType">  
            <div class="col-xs-3" style="padding-right: 0">
                <select id="items" name="itemId">
                    @foreach (var item in Model.Items)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="col-xs-1">
                <button class="btn btn-default" type="submit" style="margin-left: -5px"><span class="glyphicon glyphicon-search"></span></button>
            </div>
            @if (Model.IsSearchApplied)
            {
                <div class="col-xs-2">
                    <button id="resetBtn" class="btn btn-default" type="submit" style="margin-left: -53px">Reset</button>
                </div>
            }
        </div>
    </div>
}

<h2>Trades <small>@Model.Trades.Count() trades found</small></h2>

@if (Model.CanCreate)
{
    <div class="container" style="margin-bottom: 25px">
        <div class="row">
            <div class="col-md-6">
                <a class="btn btn-default @if (!Model.CanCreateANewTrade)
                                            {
                                                <text>disabled</text>
                                            }"
                   href="@Url.Action("Create")">Add</a>

                @if (!Model.CanCreateANewTrade)
                {
                    @: You have reached your max quota of active trades
                }
            </div>
        </div>
    </div>
}

@if (Model.Trades.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    @if (User.IsInRole("Administrator"))
                    {
                        <th style="width: 40px">Id</th>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <th style="width: 24%">Owner Id</th>
                    }
                    <th style="width: 25%">Have</th>
                    <th style="width: 25%">Want</th>
                    <th style="width: 10%">Is Hardcore</th>
                    <th style="width: 185px">Owner reputation</th>
                    <th style="width: 185px"># Offers</th>
                    @if (!User.IsInRole("Administrator"))
                    {
                        <th style="width: 100px"></th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var trade in Model.Trades)
                {
                    <tr>
                        @if (User.IsInRole("Administrator"))
                        {
                            <td>@trade.TradeData.Id</td>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            <td>@trade.TradeData.Owner.Id</td>
                        }
                        <td>
                            <ul style="list-style-type: none">
                                @foreach (var have in trade.TradeData.Have)
                                {
                                    <li>@have.Item.Name, @have.Quantity</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <ul style="list-style-type: none">
                                @foreach (var want in trade.TradeData.Want)
                                {
                                    <li>@want.Item.Name, @want.Quantity</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @trade.TradeData.IsHardcore
                        </td>
                        <td>
                            @{
                                var reputation = trade.TradeData.Owner.GetReputation();
                            }
                            @if (reputation > 0)
                            {
                                if (reputation > 4.5)
                                {
                                    <img src="~/Content/img/top_user.png" />
                                }
                                else
                                {
                                    @reputation
                                }
                            }
                            else
                            {
                                <img src="~/Content/img/new_user.png" />
                            }
                        </td>
                        <td>@trade.TradeData.Offers.Count</td>
                        @if (trade.CanOffer)
                        {
                            <td>
                                <a class="btn btn-default"
                                   href="@Url.Action("Offer", new {tradeId = trade.TradeData.Id})">Offer</a>
                            </td>
                        }
                        else if (trade.TradeData.Owner.Id != User.Identity.GetUserId() && !User.IsInRole("Administrator"))
                        {
                            <td>
                                <a class="btn btn-default"
                                   href="@Url.Action("Withdraw", new {tradeId = trade.TradeData.Id})">Withdraw</a>
                            </td>
                        }
                        else if (!User.IsInRole("Administrator"))
                        {
                            <td>
                                <a class="btn btn-default"
                                   href="@Url.Action("Delete", new {tradeId = trade.TradeData.Id})">Delete</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="panel panel-default">
        <div class="panel-body">
            There are no trade available!
        </div>
    </div>
}

@section scripts {
    <script src="~/Content/Selectize/js/standalone/selectize.js"></script>

    <script>
        $(function() {
            $('.search-panel .dropdown-menu').find('a').click(function(e) {
                e.preventDefault();
                var param = $(this).attr("href").replace("#", "");
                var concept = $(this).text();
                $('.search-panel span#search_concept').text(concept);
                $('#searchType').val(param);
            });

            $('#items').selectize({
                create: true,
                sortField: 'text'
            });

            // resets the search params before posting
            $('#resetBtn').click(function () {
                $('select[name=itemId]').val(null);
                $('#searchType').val(null);
            });
        });
    </script>
}
